{
    "name":        "nashgao/finite",
    "description": "A simple PHP Finite State Machine",
    "keywords":    ["statemachine", "workflow", "state", "transition", "symfony", "bundle"],
    "homepage":    "https://github.com/yohang/Finite",
    "type":        "library",
    "license":     "MIT",
    "authors": [
        {
            "name":     "Yohan Giarelli",
            "email":    "yohan@giarel.li",
            "homepage": "http://yohan.giarel.li"
        },
        {
            "name":     "Finite contributors",
            "homepage": "https://github.com/yohang/Finite/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/options-resolver": "^2.8|^3.0|^4.0|^5.0",
        "symfony/event-dispatcher": "^2.8|^3.0|^4.0|^5.0",
        "symfony/property-access":  "^2.8|^3.0|^4.0|^5.0"
    },
    "require-dev": {
        "phpunit/phpunit":              "^5.7.27",
        "pimple/pimple":                "^1.1.1",
        "symfony/dependency-injection": "^2.8|^3.0|^4.0|^5.0",
        "symfony/framework-bundle":     "^2.8|^3.0|^4.0|^5.0",
        "symfony/security-bundle":      "^2.8|^3.0|^4.0|^5.0",
        "friendsofphp/php-cs-fixer": "^v2.1.04"
    },
    "suggest": {
        "symfony/security": "Needed for using SecurityAwareStateMachine"
    },
    "autoload": {
        "psr-4": {
            "Finite\\": "src/Finite"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Finite\\Test\\": "tests/Finite/Test"
        }
    },
    "config": {
        "bin-dir":"bin"
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1"
    }
}
